<h1>Listing Articles</h1>
<%= link_to 'New Article', "/articles/new"%>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title%></td>
      <td><%= article.text%></td>
      <td><%= link_to 'Show',"/articles/#{article.id}"%></td>
      <td><%= link_to 'Edit', "/articles/#{article.id}/edit"%></td>
      <td><%= link_to 'Destroy', "/articles/#{article.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
